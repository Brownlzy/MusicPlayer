<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/title_permission">

        <SwitchPreferenceCompat
                app:key="permission"
                app:title="@string/give_permission"
                app:summaryOn="@string/switch_permission_on"
                app:summaryOff="@string/switch_permission_off"
                android:persistent="false" />


    </PreferenceCategory>

    <PreferenceCategory app:title="@string/example">

        <ListPreference
                app:key="reply"
                app:title="@string/reply_title"
                app:entries="@array/reply_entries"
                app:entryValues="@array/reply_values"
                app:defaultValue="reply"
                app:useSimpleSummaryProvider="true" />

        <Preference
                app:key="sync"
                app:title="@string/sync_title" />

        <SwitchPreferenceCompat
                app:key="attachment"
                app:title="@string/attachment_title"
                app:summaryOn="@string/attachment_summary_on"
                app:summaryOff="@string/attachment_summary_off"
                app:dependency="sync" />

        <SwitchPreferenceCompat
                app:key="attachment"
                app:title="@string/attachment_title"
                app:summaryOn="@string/attachment_summary_on"
                app:summaryOff="@string/attachment_summary_off"
                app:dependency="sync" />

    </PreferenceCategory>

</PreferenceScreen>